# Environment
NODE_ENV=production

# Server
PORT=3000

# Database (สำหรับ Docker Compose)
DATABASE_URL=postgresql://regapi:regapi_password@postgres:5432/reg_api_db
POSTGRES_USER=regapi
POSTGRES_PASSWORD=regapi_password
POSTGRES_DB=reg_api_db

# JWT Access Token (⚠️ เปลี่ยนในการใช้งานจริง!)
JWT_SECRET=change-this-to-a-very-long-random-secret-key-at-least-32-characters
JWT_EXPIRES_IN=7d

# JWT Refresh Token (⚠️ เปลี่ยนในการใช้งานจริง!)
JWT_REFRESH_SECRET=change-this-to-another-very-long-random-secret-key-at-least-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# Password Hashing
BCRYPT_ROUNDS=10
